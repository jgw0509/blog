/*
==================================================
Django 블로그 커스텀 CSS
==================================================
Bootstrap 5 확장 스타일
다크모드 지원
==================================================
*/

/* ===========================================
   폰트 및 기본 설정
   =========================================== */

/* 테마 변수 정의 */
:root,
[data-bs-theme="light"] {
    --font-sans: 'Noto Sans KR', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    --color-primary: #4f46e5;
    --color-primary-dark: #4338ca;
    --transition-base: 0.2s ease-in-out;

    --bg-body: #f8f9fa;
    --text-main: #212529;
    --text-muted: #6c757d;
    --card-bg: #ffffff;
    --card-border: rgba(0, 0, 0, 0.125);
    --navbar-bg: rgba(255, 255, 255, 0.95);
    --footer-bg: #f8f9fa;
}

[data-bs-theme="dark"] {
    --bg-body: #212529;
    --text-main: #f8f9fa;
    --text-muted: #adb5bd;
    --card-bg: #2b3035;
    --card-border: rgba(255, 255, 255, 0.15);
    --navbar-bg: rgba(33, 37, 41, 0.95);
    --footer-bg: #2b3035;
}

[data-bs-theme="sepia"] {
    --bg-body: #f4ecd8;
    --text-main: #5b4636;
    --text-muted: #8c786a;
    --card-bg: #fdf6e3;
    --card-border: #e2d7bf;
    --navbar-bg: rgba(244, 236, 216, 0.95);
    --footer-bg: #ede4d0;
    --color-primary: #856404;
    --color-primary-dark: #6d5203;
}

/* 부트스트랩 테마 변수 오버라이드 (Sepia) */
[data-bs-theme="sepia"] .bg-body-tertiary {
    background-color: var(--footer-bg) !important;
}

[data-bs-theme="sepia"] .dropdown-menu {
    background-color: var(--card-bg);
    border-color: var(--card-border);
}

[data-bs-theme="sepia"] .dropdown-item {
    color: var(--text-main);
}

[data-bs-theme="sepia"] .dropdown-item:hover {
    background-color: var(--bg-body);
}

[data-bs-theme="sepia"] .list-group-item {
    background-color: var(--card-bg);
    border-color: var(--card-border);
    color: var(--text-main);
}

[data-bs-theme="sepia"] .list-group-item.active {
    background-color: var(--color-primary);
    border-color: var(--color-primary);
    color: #ffffff;
}

body {
    background-color: var(--bg-body);
    color: var(--text-main);
    font-family: var(--font-sans);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    transition: background-color 0.3s ease, color 0.3s ease;
}

main {
    flex: 1;
}

/* ===========================================
   네비게이션 바
   =========================================== */

.navbar {
    background-color: var(--navbar-bg) !important;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    transition: background-color 0.3s ease;
}

.navbar-brand {
    font-weight: 700;
    color: var(--color-primary) !important;
}

/* ===========================================
   Hero 섹션
   =========================================== */

.bg-gradient-primary {
    background: linear-gradient(135deg, var(--color-primary) 0%, #7c3aed 50%, #a855f7 100%);
}

.hero-section {
    position: relative;
    overflow: hidden;
}

.hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    pointer-events: none;
}

/* ===========================================
   카드 스타일
   =========================================== */

.card {
    background-color: var(--card-bg);
    border: 1px solid var(--card-border);
    color: var(--text-main);
    border-radius: 0.75rem;
    transition: transform var(--transition-base), box-shadow var(--transition-base), background-color 0.3s ease;
}

.post-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1) !important;
}

.card-img-top {
    border-radius: 0.75rem 0.75rem 0 0;
}

/* ===========================================
   게시글 본문 스타일
   =========================================== */

.post-content {
    font-size: 1.1rem;
    line-height: 1.8;
}

.post-content p {
    margin-bottom: 1.5rem;
}

.post-content img {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
    margin: 1rem 0;
}

.post-content pre {
    background-color: #1e1e1e;
    color: #d4d4d4;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
}

.post-content code {
    background-color: rgba(0, 0, 0, 0.05);
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
}

[data-bs-theme="dark"] .post-content code {
    background-color: rgba(255, 255, 255, 0.1);
}

/* ===========================================
   버튼 스타일
   =========================================== */

.btn-primary {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    border: none;
}

.btn-primary:hover {
    background: linear-gradient(135deg, var(--color-primary-dark) 0%, var(--color-primary) 100%);
    transform: translateY(-1px);
}

/* ===========================================
   폼 스타일
   =========================================== */

.form-control:focus,
.form-select:focus {
    border-color: var(--color-primary);
    box-shadow: 0 0 0 0.25rem rgba(79, 70, 229, 0.15);
}

/* ===========================================
   페이지네이션
   =========================================== */

.pagination .page-link {
    border-radius: 0.5rem;
    margin: 0 0.25rem;
    border: none;
}

.pagination .page-item.active .page-link {
    background: var(--color-primary);
}

/* ===========================================
   푸터
   =========================================== */

.footer {
    margin-top: auto;
}

.footer a {
    text-decoration: none;
    transition: color var(--transition-base);
}

.footer a:hover {
    color: var(--color-primary) !important;
}

/* ===========================================
   댓글 섹션
   =========================================== */

.comments-list .card {
    border-radius: 0.5rem;
}

.reply-form {
    animation: slideDown 0.2s ease-out;
}

@keyframes slideDown {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* ===========================================
   반응형 조정
   =========================================== */

@media (max-width: 768px) {
    .hero-section h1 {
        font-size: 2rem;
    }

    .post-content {
        font-size: 1rem;
    }
}

/* ===========================================
   애니메이션
   =========================================== */

.fade-in {
    animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

/* ===========================================
   스크롤바 스타일 (웹킷)
   =========================================== */

::-webkit-scrollbar {
    width: 8px;
}

::-webkit-scrollbar-track {
    background: transparent;
}

::-webkit-scrollbar-thumb {
    background: #ccc;
    border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
    background: #aaa;
}

[data-bs-theme="dark"] ::-webkit-scrollbar-thumb {
    background: #555;
}

[data-bs-theme="dark"] ::-webkit-scrollbar-thumb:hover {
    background: #777;
}